. /etc/profile.d/001-functions

# Set GPU Driver at boot
GPU_DRIVER=$(get_setting "gpu.driver")
if [[ ! -n "${GPU_DRIVER}" ]] || [[ "${GPU_DRIVER}" = "libmali" ]]; then
  gpudriver libmali
  set_setting "gpu.driver" "libmali"
else
  gpudriver panfrost
  set_setting "gpu.driver" "panfrost"
fi
