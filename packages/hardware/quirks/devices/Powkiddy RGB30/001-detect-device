if [ ! -f "/sys/devices/system/cpu/cpufreq/policy0/scaling_available_governors" ]; then
  mount -o rw,remount /flash
  sed -i "/FDT/c\  FDT /rk3566-powkiddy-rgb30r2.dtb" /flash/extlinux/extlinux.conf
  reboot
fi
